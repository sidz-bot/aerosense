<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.screens.flights.DelayAlertFragment">

    <!-- Alert Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAlert"
        style="@style/Widget.AeroSense.Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_4">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Alert"
                    android:src="@drawable/ic_notification"
                    app:tint="@color/warning" />

                <TextView
                    style="@style/TextAppearance.Material3.HeadlineSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_2"
                    android:layout_weight="1"
                    android:text="⏱️ FLIGHT DELAYED"
                    android:textColor="@color/warning"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnClose"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Close"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    app:tint="@color/text_secondary" />
            </LinearLayout>

            <!-- Message -->
            <TextView
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3"
                android:text="Your flight has been delayed"
                android:textColor="@color/text_primary" />

            <!-- Delay Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORIGINAL DEPARTURE: "
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvOriginalTime"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:30 AM"
                    android:textColor="@color/text_secondary"
                    android:textStrikeThrough="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEW DEPARTURE: "
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvNewTime"
                    style="@style/TextAppearance.Material3.HeadlineMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:15 AM"
                    android:textColor="@color/warning"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Delay Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELAY: "
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvDelayDuration"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 minutes"
                    android:textColor="@color/warning"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvReason"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_2"
                    android:text="• Reason: Aircraft maintenance"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Connection Impact -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardConnectionImpact"
                style="@style/Widget.AeroSense.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/success_light"
                    android:orientation="vertical"
                    android:padding="@dimen/space_3">

                    <TextView
                        android:id="@+id/tvConnectionStatus"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your connection is still ON TRACK. You have plenty of time."
                        android:textColor="@color/success"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_1"
                        android:text="No action needed."
                        android:textColor="@color/text_secondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- View Timeline Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewTimeline"
                style="@style/Widget.AeroSense.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:text="View Updated Timeline" />

            <!-- Notification Settings Note -->
            <TextView
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_4"
                android:text="You'll receive another update if departure time changes again.\nCustomize alerts in Settings."
                android:textAlignment="center"
                android:textColor="@color/text_secondary" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
