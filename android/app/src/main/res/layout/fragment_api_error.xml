<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.screens.error.ApiErrorFragment">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/elevation_md">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            app:navigationIcon="@drawable/ic_back"
            app:title="Error" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Error Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/space_4"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Error Icon Container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/space_4"
            app:cardBackgroundColor="@color/error_light"
            app:cardCornerRadius="@dimen/radius_full"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/errorIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_error"
                app:tint="@color/error" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Error Title -->
        <TextView
            android:id="@+id/tvErrorTitle"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_2"
            android:gravity="center"
            android:text="Something went wrong"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <!-- Error Message -->
        <TextView
            android:id="@+id/tvErrorMessage"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_6"
            android:gravity="center"
            android:text="Please try again."
            android:textColor="@color/text_secondary" />

        <!-- Retry Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRetry"
            style="@style/Widget.AeroSense.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/button_height_large"
            android:text="Retry" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
