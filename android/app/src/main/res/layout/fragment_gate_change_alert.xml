<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.screens.flights.GateChangeAlertFragment">

    <!-- Alert Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAlert"
        style="@style/Widget.AeroSense.Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_4">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Alert"
                    android:src="@drawable/ic_notification"
                    app:tint="@color/error" />

                <TextView
                    style="@style/TextAppearance.Material3.HeadlineSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_2"
                    android:layout_weight="1"
                    android:text="âš ï¸ GATE CHANGED"
                    android:textColor="@color/error"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnClose"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Close"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    app:tint="@color/text_secondary" />
            </LinearLayout>

            <!-- Message -->
            <TextView
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3"
                android:text="Your departure gate has changed"
                android:textColor="@color/text_primary" />

            <!-- Gate Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OLD GATE: "
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvOldGate"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B22"
                    android:textColor="@color/text_secondary"
                    android:textStrikeThrough="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEW GATE: "
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvNewGate"
                    style="@style/TextAppearance.Material3.HeadlineMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B42"
                    android:textColor="@color/error"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_2"
                    android:text="â† Go here"
                    android:textColor="@color/error"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Walking Time -->
            <TextView
                android:id="@+id/tvWalkingTime"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2"
                android:text="B42 is in Terminal 2 â€¢ Walking time: 12 min â€¢ Departs in: 45 min"
                android:textColor="@color/text_secondary" />

            <!-- Get Directions Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGetDirections"
                style="@style/Widget.AeroSense.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:text="Get Directions to B42" />

            <!-- Already There Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAlreadyThere"
                style="@style/Widget.AeroSense.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2"
                android:text="I'm already at B42" />

            <!-- Pro Tip -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.AeroSense.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                app:cardElevation="0dp"
                app:strokeColor="@color/info"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_3">

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Pro tip"
                        android:textColor="@color/text_primary" />

                    <TextView
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_1"
                        android:text="Other passengers may not know about this change yet. Consider calling ahead to any travelers meeting you."
                        android:textColor="@color/text_secondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
