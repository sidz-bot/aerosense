# AeroSense Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database (PostgreSQL)
DATABASE_URL="postgresql://aerosense:password@localhost:5432/aerosense?schema=public"
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30

# Redis Cache
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=
REDIS_TTL=60
REDIS_MAX_RETRIES=3

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="1h"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Rate Limiting
FREE_RATE_LIMIT=100
PREMIUM_RATE_LIMIT=1000
RATE_LIMIT_WINDOW=3600000

# FlightAware API
FLIGHTAWARE_API_KEY=""
FLIGHTAWARE_API_BASE="https://flightaware.com/api"

# AWS (for production)
AWS_REGION="us-east-1"
ECS_CLUSTER_NAME="aerosense-cluster"
RDS_INSTANCE_ID="aerosense-db"
ELASTICACHE_CLUSTER_ID="aerosense-redis"

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:8080"

# Push Notifications (APNS)
APNS_KEY_ID=""
APNS_TEAM_ID=""
APNS_BUNDLE_ID="com.aerosense.app"

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_REQUEST_LOGGING=true
